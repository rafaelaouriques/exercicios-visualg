algoritmo "dobro&terça"
var
     n, d, t: real
inicio
      Escreval("================= NÚMEROS  =================")
      
Escreval ("Digite um número: ")
Leia (n)

d <- n*2
t <- n/3

Escreval("O dobro de ", n, " é: ", d)
Escreval("A terça parte de ", n, " é :", t)




      

      

fimalgoritmo