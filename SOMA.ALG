algoritmo "soma"
var
     n1,n2, s: inteiro
inicio
      Escreval("================= VAMOS SOMAR? =================")
      Escreval("Digite um número: ")
      Leia (n1)
      Escreval("Digite outro número: ")
      Leia(n2)
s <- n1 + n2

Escreval("A soma entre", n1, " e ", n2, " é de :",  s)

      

fimalgoritmo