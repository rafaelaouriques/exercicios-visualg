algoritmo "media"
var
     n1,n2, m: real
inicio
      Escreval("================= PORTAL DE NOTAS DO ALUNO  =================")
      Escreval("Digite sua primeira nota: ")
      Leia (n1)
      Escreval("Agora, digite a sua segunda nota: ")
      Leia (n2)
      
m <- (n1+n2)/2

     Escreval("A média entre ", n1, " e ", n2, " é de: ", m)

      

fimalgoritmo