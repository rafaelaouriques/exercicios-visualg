algoritmo "ant&suc"
var
     n1,n2, ant, suc: inteiro
inicio
      Escreval("================= DESCUBRA O ANTECESSOR E SUCESSOR DE UM NÚMERO  =================")

      Escreval("Digite um número: ")
      Leia (n1)

ant <- n1 - 1
suc <- n1 + 1

Escreval("O antecessor de ", n1, " é: ", ant)
Escreval("O sucessor de ", n1, " é: ", suc)

      

      

fimalgoritmo